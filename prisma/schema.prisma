generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Customer {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  messages  Message[]
}

model Message {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  customer      Customer      @relation(fields: [customerId], references: [id])
  customerId    Int
}

model AuthUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
}

model PageContent {
  id          Int      @id @default(autoincrement())
  page        Page     @relation(fields: [pageId], references: [id], onDelete:Cascade)  
  pageId      Int      @unique
  heading     String
  bodies      String[]
  signature   String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Page {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  content    PageContent?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GuitarSpec {
  id                Int      @id @default(autoincrement())
  tag               String   @unique
  name              String
  body              String
  neck              String
  fingerboard       String
  fingerboardRadius String
  scaleLength       String
  fretMarkers       String
  neckPickup        String
  middlePickup      String?
  bridgePickup      String?
  pickupSwitch      String?
  bridge            String
  vibrato           String?
  tuners            String
  knobs             String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
